<Page
    x:Class="KinoApp.Views.MovieDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KinoApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:i="using:Microsoft.Xaml.Interactivity" xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d" Margin="{StaticResource MediumLeftRightMargin}" 
    Background="Transparent">
    <FlyoutBase.AttachedFlyout>
        <Flyout ShouldConstrainToRootBounds="True" OverlayInputPassThroughElement="{x:Bind Content}" Placement="Full" LightDismissOverlayMode="On">
            <Flyout.FlyoutPresenterStyle>
                <Style TargetType="FlyoutPresenter">
                    <Setter Property="MaxHeight" Value="Infinity"/>
                    <Setter Property="MaxWidth" Value="1000"/>
                    <Setter Property="ScrollViewer.HorizontalScrollMode" Value="Disabled"/>
                    <Setter Property="ScrollViewer.VerticalScrollMode" Value="Auto"/>
                </Style>
            </Flyout.FlyoutPresenterStyle>
            <Image Source="{x:Bind ViewModel.BriefMovie.PosterUrl}"  Stretch="Uniform"/>
        </Flyout>
    </FlyoutBase.AttachedFlyout>
    <i:Interaction.Behaviors>
        <Core:EventTriggerBehavior EventName="Unloaded">
            <Core:InvokeCommandAction Command="{x:Bind ViewModel.UnLoadCommand}"/>
        </Core:EventTriggerBehavior>
        <Core:EventTriggerBehavior EventName="Loaded">
            <Core:InvokeCommandAction Command="{x:Bind ViewModel.LoadCommand}"/>
        </Core:EventTriggerBehavior>
    </i:Interaction.Behaviors>

    <ScrollViewer>
        <StackPanel>
            <Border Margin="5" CornerRadius="10" Background="White">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" VerticalAlignment="Center" Grid.Column="0" CornerRadius="10">
                        <Image x:Name="poster" Source="{x:Bind ViewModel.BriefMovie.PosterUrl}">
                            <i:Interaction.Behaviors>
                                <Core:EventTriggerBehavior EventName="Tapped">
                                    <Core:InvokeCommandAction Command="{x:Bind ViewModel.ImageTappedCommand}" CommandParameter="{x:Bind poster}" />
                                </Core:EventTriggerBehavior>
                            </i:Interaction.Behaviors>
                        </Image>
                    </Border>

                    <StackPanel Grid.Row="0" Grid.Column="1"  Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" FontWeight="Bold" Style="{StaticResource HeaderTextBlockStyle}"
                                       Text="{x:Bind ViewModel.Movie.Name ,Mode=OneWay}" TextWrapping="Wrap"  />
                            <Button Grid.Column="1" HorizontalAlignment="Left"  Margin="0,10,0,0" Command="{x:Bind ViewModel.FavoriteSwitchCommand}" VerticalAlignment="Center">
                                <SymbolIcon x:Name="symbol"  Symbol="OutlineStar">
                                    <i:Interaction.Behaviors>
                                        <Core:DataTriggerBehavior Binding="{x:Bind ViewModel.IsFavorite,Mode=OneWay}" Value="False">
                                            <Core:ChangePropertyAction TargetObject="{Binding ElementName=symbol}" PropertyName="Symbol" Value="OutlineStar" />
                                        </Core:DataTriggerBehavior>
                                        <Core:DataTriggerBehavior Binding="{x:Bind ViewModel.IsFavorite,Mode=OneWay}" Value="True">
                                            <Core:ChangePropertyAction TargetObject="{Binding ElementName=symbol}" PropertyName="Symbol" Value="Favorite" />
                                        </Core:DataTriggerBehavior>
                                    </i:Interaction.Behaviors>
                                </SymbolIcon>
                            </Button>
                        </Grid>
                        <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="{x:Bind ViewModel.Movie.Description,Mode=OneWay}" />
                    </StackPanel>
                </Grid>
            </Border>

            <Border Margin="5" CornerRadius="10" Background="White">
                <StackPanel Margin="5">
                    <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="Bold" >
                    <Run Text="О"/>
                    <Run Text="{x:Bind ViewModel.Movie.Type,Converter={StaticResource TypeToStringConverter},Mode=OneWay}"/>
                    </TextBlock>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource BodyTextBlockStyle}"  Text="Год производства"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource BodyTextBlockStyle}"  Text="{x:Bind ViewModel.Movie.Year,Mode=OneWay}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource BodyTextBlockStyle}"  Text="Страна" />
                        <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource BodyTextBlockStyle}"  Text="{x:Bind ViewModel.Movie.Countries,Mode=OneWay, Converter={StaticResource CountriesToStringConverter}}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource BodyTextBlockStyle}"  Text="Жанр" />
                        <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource BodyTextBlockStyle}"  Text="{x:Bind ViewModel.Movie.Genres,Mode=OneWay, Converter={StaticResource GenresToStringConverter}}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource BodyTextBlockStyle}"  Text="Длительность"/>
                        <TextBlock Grid.Row="3" Grid.Column="1"  Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind ViewModel.Movie.FilmLength,Mode=OneWay,Converter={StaticResource MinutesToTimeConverter}}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Margin="5" CornerRadius="10" Background="White">
                <StackPanel Margin="5">
                    <TextBlock Text="Оценки" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="Bold"/>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Grid.Row="0" Grid.Column="1" Foreground="{x:Bind ViewModel.Movie.RatingKinopoisk, Converter={StaticResource RatingToBrushConverter},Mode=OneWay}"
                                   Style="{StaticResource SubheaderTextBlockStyle}" FontWeight="Bold"  Text="{x:Bind ViewModel.Movie.RatingKinopoisk,Mode=OneWay}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource BodyTextBlockStyle}">
                           <Run Text="{x:Bind ViewModel.Movie.RatingKinopoiskVoteCount,Mode=OneWay}"/>
                           <Run Text="оценок"/>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel VerticalAlignment="Bottom"  Grid.Column="1">
                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource BodyTextBlockStyle}">
                            <Run Text="IMDB:" FontWeight="Bold" />
                            <Run Text="{x:Bind ViewModel.Movie.RatingImdb,Mode=OneWay}" FontWeight="Bold" />
                            <Run Text="{x:Bind ViewModel.Movie.RatingImdbVoteCount,Mode=OneWay}"/>
                            <Run Text="оценок"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
